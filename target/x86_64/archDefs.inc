ARCH_x86_64_CC=x86_64-elf-gcc
ARCH_x86_64_TRIPLET=x86_64-none-elf

TARGET_TRIPLET=$(ARCH_x86_64_TRIPLET)
TARGET_LDSCRIPT=linker.ld

TARGET_MAKE=DEFINES="$(DEFINES)" COM_ENABLED=$(COM_ENABLED) CONF=$(CONF) BOOT_FS=$(BOOT_FS) BUILD_DIR="$(BUILD_DIR)" INCLUDES="$(addprefix $(BUILD_DIR)/, $(INCLUDES))" CUR_DIR="$(BUILD_DIR)/$(TARGET_DIR)/$(TARGET_ARCH)" all

CC=clang -target $(TARGET_TRIPLET)
TARGET_ARCH_CC=$(ARCH_x86_64_CC)
AS=$(ARCH_x86_64_CC) 
ASFLAGS+=-ffreestanding -march=x86_64 -m64

include $(TARGET_DIR)/$(TARGET_ARCH)/Sources.inc